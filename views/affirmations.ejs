<!-- users saved affirmations page -->
<!doctype html>
<html>
<head>
    <title>Top Flight Security</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="font-awesome.min.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span>Overtime</h1>
        <a href="/profile" class="btn btn-default btn-sm">Clock-In</a>
    </div>

    <div class="background row">

        <div class="col-sm-6">
            <div class="well">
                <h3 class="headingThree">Security Overtime Availability!</h3>
                <!-- <% if (user.local.email) { %> -->
                  <form action="/messages" method="POST">
                    <label for="email">Enter Name or Email</label>
                    <input class="emailShow" type="text" value="<%= user.local.email %>" placeholder="Name" name="name">
                    <p>Availability
                      <select class="selction" id="availability" name="avail">
                        <option value="Available">Available</option>
                        <option value="Requested Off">Requested Off</option>
                      </select></p>
                    <p>Date<input id="date" type="date" name ="date"></p>
                    

                    
                    <label class="message" for="message">Add your message (Optional)</label>
                    <input class="msgs" type="text" placeholder="Enter message here" name="msg">
                    <button class="add" type="submit">Add Availability</button>
                </form>
            </div>
        </div>
        <div class="col-sm-6" id="second">
          <h3>Messages</h3>
          
          <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
              <li class="message">
                <span><%= messages[i].name %></span>
                <span><%= messages[i].avail %></span>
                <span><%= messages[i].date %></span>
                <span><%= messages[i].msg %></span>
                <span><i class="fa fa-smile-o" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </li>
            <% } %>
          </ul>

        </div>
        <!-- <% } %> -->
    </div>

</div>

<script src="main.js"></script>

</body>
</html>
